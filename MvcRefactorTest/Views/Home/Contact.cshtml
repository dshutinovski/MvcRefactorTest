@model MvcRefactorTest.Domain.Contact
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.css" rel="stylesheet"/>

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

<section class="contact">
    <header>
        <h3>Phone</h3>
    </header>
    <p>
        <span class="label">Main:</span>
        <span>@Model.MainPhone</span>
    </p>
    <p>
        <span class="label">After Hours:</span>
        <span>@Model.AfterHours</span>
    </p>
</section>

@using (Html.BeginForm())
{
    <section class="contact">
        <header>
            <h3>Email</h3>
        </header>
        <p>
            <span class="label">Support:</span>
            <span><a href="mailto:@Model.SupportEmail">@Model.SupportEmail</a></span>
        </p>
        <p>
            <span class="label">Marketing:</span>
            <span><a href="mailto:@Model.MarketingEmail">@Model.MarketingEmail</a></span>
        </p>
        <p>
            <span class="label">General:</span>
            <span><a href="mailto:@Model.GeneralEmail">@Model.GeneralEmail</a></span>
        </p>
    </section>

    <section class="contact">
        <header>
            <h3>Address</h3>
        </header>
        <p style="width: 190px">
            @Model.Address
        </p>
    </section>
}